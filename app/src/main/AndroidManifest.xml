<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.frog.el_attentionattacher">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GuideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AttentionAttacherActivity" />
        <activity android:name=".Almanac" />

        <service
            android:name=".service.AutoUpdateService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".PersonalInfo" />
        <activity android:name=".Welcome" />
        <!--用来接收闹钟广播的receiver-->
        <receiver
            android:name=".receiver.ClockReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.frog.el_attentionattacher.broadcast.Alarm" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".AlarmActivity"
            android:theme="@style/AppTheme.transparent_activity">
        </activity>
    </application>

</manifest>